{
  "builders": [{
    "type": "virtualbox-iso",
    "virtualbox_version_file": ".vbox_version",
    "headless": true,

    "guest_os_type": "RedHat_64",
    "disk_size": 40960,

    "iso_url": "https://mirrors.kernel.org/centos/7.4.1708/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",
    "iso_checksum": "aae20c8052a55cf179af88d9dd35f1a889cd5773",
    "iso_checksum_type": "sha1",

    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.4/ks.cfg<enter><wait>"
    ],
    "boot_wait": "12s",

    "http_directory": "http",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ],

    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
  }],
  "post-processors": [{
    "output": "build/centos-7.4-awx.box",
    "type": "vagrant"
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/setup.sh"
    ]
  }]
}

